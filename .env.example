# Database Configuration
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# JWT Secret for Authentication
JWT_SECRET="your-secret-key-here"

# Environment
NODE_ENV=production

# Google Cloud Configuration
GOOGLE_PROJECT_ID="your-project-id"
GOOGLE_SERVICE_ACCOUNT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
IMPERSONATED_USER_EMAIL="admin@yourdomain.com"

# Google Pub/Sub
PUBSUB_TOPIC_NAME="meet-events-topic"
PUBSUB_SUBSCRIPTION_NAME="meet-events-subscription"

# Webhook Destination (where to send meeting data)
WEBHOOK_DESTINATION_URL="https://your-webhook-destination.com/endpoint"

# Server Port (for local development)
PORT=4000

# CORS Origins (comma-separated)
CORS_ORIGIN="http://localhost:5173,http://localhost:4000,https://reuniao.lmedu.com.br"

# Anthropic API Key (for AI features)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Optional: Cron Secret (to protect cron endpoints)
CRON_SECRET=your-cron-secret-token
